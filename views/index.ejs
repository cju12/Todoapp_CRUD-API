<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo app</title>
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/08c13121c6.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="topUI">
        <a href="/" draggable="false"><h1 id="h1">Todo App</h1></a>
        <span><form action ="/add" method="get">
            <button class="addTodo" id="add">Add</button>
        </form></span>
    </div>
    <div class="container">
        <% if (todoList.length > 0) { %>
            <% todoList.forEach(function(Todo) { %>
                <div class="todolist">
                    <ul class="todo-list">
                        <li id="goal"><strong><%= Todo.text %></strong></li>
                        <li><strong>priority</strong> : <%= Todo.priority %></li>
                        <li><strong>deadline</strong> : <%= Todo.deadline %></li>
                    </ul>
                    <button class="<%= Todo._id %>" id="delete" onclick="deleteFunc(event)">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                    <form action = "/patch<%= Todo._id %>" method="get">
                        <button class = "Edit">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                    </form>
                </div>
            <% }) %>
        <% } else { %>
            <p class="notodo">Hmm... Seems Like There's Nothing Here</p><br />
            <p class="notodo">Perhaps, You Can Add Some? <i class="fa-solid fa-face-smile-wink"></i></p>
        <% } %>
    </div>
</body>
<script>

    /**
     * Delete function for deleting the displayed goals/todos.
     * 
     * functioning when the delete button is clicked
    */
    function deleteFunc(event) {

        // Using confirm(), asking 1 more time if you want to delete the goal

        if (confirm('Are you sure you want to delete this todo?')) event.preventDefault(); // Continue if clicked "ok"
        else return; // Return if clicked "cancel"

        // Get the todo ID from the class of delete button
        const todoId = event.target.closest('button').className; 

        // Using fetch api to function a method of delete
        fetch(`/${todoId}`, {
            method: 'DELETE',
        })
        .then(res => {
            if (res.ok) {
                window.location.reload(); // Reload the page to see the updated list
            } else {
                console.error('Error deleting todo:', res.statusText); // Show an error file if failed.
            }
        })
    };
</script>
</html>
